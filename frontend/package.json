{
  "name": "viasp-frontend-test",
  "version": "0.0.2-alpha.5",
  "description": "The frontend for viASP",
  "private": false,
  "scripts": {
    "test": "instant-mocha --webpack-config webpack.config.js",
    "build": "webpack",
    "watch": "webpack --watch",
    "start": "electron-forge start",
    "prerelease": "npm version prerelease && npm publish --access public",
    "elec": "npm run build && electron ./dist/main.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "make-mac": "electron-forge make --platform darwin"
  },
  "keywords": [],
  "author": "Luis Glaser",
  "license": "MIT",
  "prepublishOnly": "webpack --mode=production",
  "main": "./.webpack/main",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "@types/mocha": "^9.0.0",
    "css-loader": "^6.5.1",
    "electron": "^16.0.4",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "instant-mocha": "^1.4.0",
    "mocha": "^8.4.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "ps-tree": "^1.2.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "viasp_frontend_test"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "glaserL",
              "name": "viasp"
            },
            "draft": true
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "default-src * self blob: data: gap:; style-src * self 'unsafe-inline' blob: data: gap:; script-src * 'self' 'unsafe-eval' 'unsafe-inline' blob: data: gap:; object-src * 'self' blob: data: gap:; img-src * self 'unsafe-inline' blob: data: gap:; connect-src self * 'unsafe-inline' blob: data: gap:; frame-src * self blob: data: gap:;",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
